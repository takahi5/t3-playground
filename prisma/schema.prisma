model Order {
  id             Int    @id @default(autoincrement())
  buyerUserId    Int 
  sellerUserId   Int
  deliveryStatus Int // sqliteがenum非対応 
  createdAt      DateTime @default(now())
}

model Notification {
  id          Int    @id @default(autoincrement())
  text        String
  createdAt DateTime @default(now())
}